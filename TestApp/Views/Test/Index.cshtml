@model IEnumerable<TestApp.Models.TestModel>

@{
    ViewBag.Title = "Test List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("#")
        </th>
        <th>
            @Html.DisplayName("Test Name")
        </th>
        <th>
            @Html.DisplayName("Test Date")
        </th>
        <th>
            @Html.DisplayName("Test Price")
        </th>
        <th>
            @Html.DisplayName("Test Result")
        </th>
        <th>
            @Html.DisplayName("Docter ")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestResult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorRemarks)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TestId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TestId })
        </td>
    </tr>
}

</table>

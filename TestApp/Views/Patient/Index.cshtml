@model IEnumerable<TestApp.Models.PatientModel>

@{
    ViewBag.Title = "Patient List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("#")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("Age")
        </th>
        <th>
            @Html.DisplayName("City")
        </th>
        <th>
            @Html.DisplayName("DOB")
        </th>
        <th>
            @Html.DisplayName("Addmision Date")
        </th>
        <th>
            @Html.DisplayName("Hospital")
        </th>
        <th>
            @Html.DisplayName("Discharge Date")
        </th>
        <th>
            @Html.DisplayName("Total Amount")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PatientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hospital)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DischargeDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.ActionLink("Add Test", "CreateTest", new { test = item, id = item.PatientId } ) |
            @Html.ActionLink("Edit", "Edit", new { id = item.PatientId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PatientId })
        </td>
    </tr>
}

</table>
